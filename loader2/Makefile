# -------------------------------------------------------------
# loader/Makefile
# Build system for the loader module (with GdkPixbuf support)
# -------------------------------------------------------------

CC = gcc
CFLAGS = -Wall -Wextra -std=c99 `pkg-config --cflags gdk-pixbuf-2.0`
LDFLAGS = -lm `pkg-config --libs gdk-pixbuf-2.0`

OBJ = loader.o main.o
EXEC = loader_test

# -------------------------------------------------------------
# Default target: build everything
# -------------------------------------------------------------
all: $(EXEC)

$(EXEC): $(OBJ)
	@echo "ðŸ”§ Linking $(EXEC)..."
	$(CC) $(CFLAGS) -o $(EXEC) $(OBJ) $(LDFLAGS)
	@echo "âœ… Build complete!"

%.o: %.c
	@echo "ðŸ“¦ Compiling $<..."
	$(CC) $(CFLAGS) -c $< -o $@

# -------------------------------------------------------------
# Clean target: remove objects, executables, and generated images
# -------------------------------------------------------------
clean:
	@echo "ðŸ§¹ Cleaning loader directory..."
	rm -f *.o $(EXEC)
	rm -f images/*.png images/*.jpg images/*.jpeg images/*.bmp
	rm -f last_image.txt
	@echo "ðŸ—‘ï¸  Objects, executables, and images deleted from loader/"

.PHONY: all clean
